        "issue_analysis_and_categorization",
        "fix_workflow_generation",
        "security_assessment",
        "build_status_monitoring"
      ]
    },
    "security_scanning": {
      "custom_scanner": "scripts/security/security_scan.py",
      "patterns_detected": 15,
      "severity_levels": ["HIGH", "MEDIUM", "LOW"],
      "auto_cleanup": true,
      "report_lifetime_seconds": 30
    }
  },
  
  "security_implementation": {
    "protection_layers": 5,
    "excluded_patterns": [
      "*.db", "*.sqlite3", "Cookie.json", "config.json",
      "watchlist_*.json", "friends_*.json", "*_ENABLED.md",
      "security_report*.txt", "bandit-*.json", "*.log"
    ],
    "scanning_tools": [
      "custom_security_scanner",
      "trufflehog",
      "bandit",
      "safety"
    ],
    "ci_cd_integration": {
      "github_actions": true,
      "automated_scans": "on_push_and_pr",
      "scheduled_scans": "daily_2am_utc"
    }
  },
  
  "build_configuration": {
    "tool": "PyInstaller",
    "spec_file": "letterboxd_friend_check.spec",
    "hidden_imports": [
      "tkinter", "requests", "beautifulsoup4", "sqlite3",
      "tmdbsimple", "PIL", "threading", "queue"
    ],
    "data_files": [
      "config_template.json",
      "LICENSE",
      "README.md"
    ],
    "optimization": {
      "upx_compression": false,
      "console_mode": true
    }
  },
  
  "testing_strategy": {
    "framework": "pytest",
    "coverage_target": 80,
    "test_categories": [
      "unit_tests",
      "integration_tests",
      "security_tests",
      "ui_tests"
    ],
    "ci_integration": true
  },
  
